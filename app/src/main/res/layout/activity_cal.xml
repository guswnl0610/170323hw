<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.guswn_000.homework3.CalActivity">

    <TabHost
        android:id="@+id/tabhost1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#a6f297"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="30dp"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="평이나 면적을 입력하세요"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/etmeter"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="#9adf6b"
                            android:ems="10"
                            android:inputType="number" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:weight="1"
                                app:srcCompat="@mipmap/ic_launcher" />

                            <TextView
                                android:id="@+id/tvmetres"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="1"
                                android:background="#d9ffc0"
                                android:textSize="20dp"
                                android:text="계산결과가 없습니다."
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                        <Button
                            android:id="@+id/ptombutn"
                            android:onClick="pmlistener"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#c9ff8c"
                            android:text="평을 제곱미터로 변환" />

                        <Button
                            android:id="@+id/mtopbtn"
                            android:onClick="pmlistener"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:background="#7af1ae"
                            android:text="제곱미터를 평으로 변환" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffe2a3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="30dp"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:text="키와 몸무게를 입력하세요" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="키(cm)"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/etheight"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="#fff4db"
                            android:ems="10"
                            android:inputType="number" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="체중(kg)"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/etweight"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="#fff4db"
                            android:ems="10"
                            android:inputType="number" />

                        <Button
                            android:id="@+id/bmibutton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:background="#f1be84"
                            android:onClick="bmilistener"
                            android:text="BMI 계산 결과"
                            android:textColor="#ffffff" />

                        <TextView
                            android:id="@+id/tvbmires"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="결과가 없습니다."
                            android:textSize="20dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
</LinearLayout>
